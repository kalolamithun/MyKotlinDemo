<resources>

    <!-- Base application theme. -->

    <!-- declare the theme name that's actually applied in the manifest file -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <!-- base set of styles that apply to all versions -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   a darker variant of the primary color, used for the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- Transparent StatusBar     -->
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="SplashTheme" parent="AppTheme">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="toolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <!--Style for Progress Dialog-->
    <style name="AppTheme.ProgressDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="textStyle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyle.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="textStyle.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyle.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/scrTitle</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="textStyle.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="formTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="colorAccent">@color/colorHint</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="hintTextColor">@color/colorHint</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="boxStrokeColor">@color/colorStroke</item>
        <item name="hintTextAppearance">@style/HintText</item>
    </style>

    <style name="formTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_30sdp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/_14ssp
        </item>
    </style>

    <style name="cardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/White</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="HintTextRegular" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="YoutubePlayer" parent="BaseAppTheme">
        <item name="android:background">#8B000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:buttonTint">@color/White</item>
    </style>

    <style name="fullScreenDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowIsFloating">false</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#34475B</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#34475B</item>
    </style>

    <style name="flatButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="cornerButtonStickyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="cornerRadius">@dimen/_3sdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
